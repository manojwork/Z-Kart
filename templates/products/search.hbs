{{#if isFilter}}
{{filter-bar isGlobal=isGlobal triggerAfterError=(action "afterError") data=model triggerBack=(action "back") triggerFilter = (action "filter") triggerClear = (action "clear") }}
{{/if}}

{{#if displayProducts}}

 
<div class="filter-button">
  <button title=" Local Filter " {{action "displayFilter" }}><i style="{{if isFilteredProducts "color:lightgreen;"}}" class="fa-solid fa-filter"></i>  Filter</button>
</div>
 
<div class="products">

  {{#each displayProducts as |product|}}
  
      {{product-layout product=product}}

  {{/each}}




</div>


<div class="next-prev">

{{#if isPrevious}}
<i {{action "previous"}} class="fa-solid fa-chevron-left"></i>
{{/if}}

{{#if isNext}}
<i  {{action "next"}} class="fa-solid fa-chevron-right"></i>
{{/if}}

</div>

  {{else}}

<div class="products">
<video playsinline autoplay loop muted  class="max-w-[500px] min-w-[250px] max-h-[330px]" style="width: 500px; border-radius:20px"><source src="https://cdnl.iconscout.com/lottie/premium/preview-watermark/empty-cart-animation-download-in-lottie-json-gif-static-svg-file-formats--no-item-shopping-shpping-bascket-food-delivery-pack-e-commerce-animations-4391074.mp4" type="video/mp4"></video>
</div>
<div class="products">
  {{#link-to "products.index"}}<button style="background-color: rgb(255, 140, 0);">Products</button> {{/link-to}}
</div>
 

  {{/if}}